<div id="game">
    <header>
        <div class="menu">
            <button id="help-button" class="icon" aria-label="help">
                <game-icon icon="help"></game-icon>
            </button>
        </div>
        <div class="title">
            Word MasterMind
        </div>
        <div class="menu">
            <button id="statistics-button" class="icon" aria-label="statistics">
                <i class="fal fa-chart-line"></i>
            </button>
            <button id="settings-button" class="icon" aria-label="settings">
                <i class="fas fa-cogs"></i>
            </button>
        </div>
    </header>
    @if (GameStateMachine.State is GameState.Rules)
    {
        <RulesDialog OnClose=@OnRulesDialogClose></RulesDialog>
    } else if (GameStateMachine.State is GameState.SourceSelection)
    {
        <DictionarySourceList></DictionarySourceList>
        <button class="icon" aria-label="back" onclick=@OnBackClick><i class="fas fa-step-backward"></i></button>
        <button class="icon" aria-label="next" onclick=@OnNextClick><i class="fas fa-step-forward"></i></button>
    } else if (GameStateMachine.State is GameState.LengthSelection)
    {
        <select>
            @if (GameStateMachine.LiteralDictionary != null)
            {
                foreach (var length in GameStateMachine.LiteralDictionary.ValidWordLengths)
                {
                    <option value=@length>@length</option>
                }
            }
        </select>
    } else if (GameStateMachine.State is GameState.Playing or GameState.GameOver)
    {
        <div id="board-container">
            <GameBoard></GameBoard>
        </div>
        @if (GameStateMachine.State is GameState.Playing)
        {
            <GameKeyboard></GameKeyboard>
        }
    } else {
        <h3>Unknown state</h3>
    }
</div>